<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <record id="default card level setting" model="vip.level">
          <field name="level_name">普通会员</field>
          <field name="min_money">0.00</field>
          <field name="max_money">0.00</field>
          <field name="percent">1.00</field>
        </record>

        <record id="default message setting" model="message.setting">
          <field name="account">短信账户</field>
          <field name="password">123456</field>
        </record>

        <record id="default message setpoints" model="vip.setpoints">
          <field name="rule_money">1</field>
          <field name="rule_point">1</field>
          <field name="rule_active">True</field>
        </record>

        <record id="default message setting1" model="message.template">
          <field name="name">会员充值发送短信</field>
          <field name="details">您好，您本次充值金额为{AddMoney}元，当前卡内余额为{CurMoney}元，欢迎推荐身边其他朋友使用我们公司的会员卡，优惠等着你。</field>
          <field name="content"></field>
          <field name="active">True</field>
        </record>
        <record id="default message setting2" model="message.template">
          <field name="name">会员挂失发送短信</field>
          <field name="details">您好，您的卡号为{CardID}的会员卡已成功挂失，请携带有效证件到我公司重新激活方可进行消费。</field>
          <field name="content"></field>
          <field name="active">True</field>
        </record>
        <record id="default message setting3" model="message.template">
          <field name="name">会员注销发送短信</field>
          <field name="details">您好，您的卡号为{CardID}的会员卡已成功注销，请携带有效证件到我公司重新激活方可进行消费。</field>
          <field name="content"></field>
          <field name="active">True</field>
        </record>
        <record id="default message setting4" model="message.template">
          <field name="name">会员激活发送短信</field>
          <field name="details">您好，您的卡号为{CardID}的会员卡已成功激活，充值消费均已可正常可用。</field>
          <field name="content"></field>
          <field name="active">True</field>
        </record>
        <record id="default message setting5" model="message.template">
          <field name="name">会员消费发送短信</field>
          <field name="details">您好，您本次消费金额为{CutMoney}元，卡内余额为{CurMoney}元，本次增加积分{AddPoint}，当前积分为{CurPoint}，欢迎下次继续光临！</field>
          <field name="content"></field>
          <field name="active">True</field>
        </record>
        <record id="default message setting6" model="message.template">
          <field name="name">会员积分发送短信</field>
          <field name="details">您好，本次增加积分{AddPoint}，当前积分为{CurPoint}，欢迎下次继续光临！</field>
          <field name="content"></field>
          <field name="active">True</field>
        </record>
        <record id="default message setting7" model="message.template">
          <field name="name">会员动态支付短信</field>
          <field name="details">您好！您的支付验证码为{SecCode}，请勿将验证码透露给其他人。</field>
          <field name="content"></field>
          <field name="active">True</field>
        </record>
        <record id="default message setting8" model="message.template">
          <field name="name">会员发送密码短信</field>
          <field name="details">您好！您的支付密码为{MemPWD}，请保管好你的密码。</field>
          <field name="content"></field>
          <field name="active">True</field>
        </record>
        <record id="default message setting9" model="message.template">
          <field name="name">会员注册成功短信</field>
          <field name="details">您好，恭喜您成为本公司的会员，您的卡号为{CardID}的会员卡，会员等级为{Level}，享受折扣{Discount}，您可通过充值提升会员等级，享受更多优惠！</field>
          <field name="content"></field>
          <field name="active">True</field>
        </record>
    </data>
</openerp>

